<odoo>
    <record id="action_generate_accounting_entries" model="ir.actions.act_window">
        <field name="name">Generar Asientos Contables</field>
        <field name="res_model">generate.accounting.entries.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_stock_move_generate_accounting_entries" model="ir.ui.view">
        <field name="name">stock.move.action.generate.accounting.entries</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Generar Asientos Contables" 
                            type="action" 
                            name="%(action_generate_accounting_entries)d"/>
                </header>
            </form>
        </field>
    </record>
</odoo>